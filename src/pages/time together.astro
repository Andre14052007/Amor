---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Tempo Juntos">
    <div class="time-together-container">
        <section class="hero-section">
            <div class="hero-content">
                <h1>Amando-nos um ao outro desde:</h1>
                <h2>3 de Novembro de 2023</h2>
                <p class="hero-subtitle">Uma jornada de amor e paix√£o</p>
            </div>
        </section>

        <section class="days-loving-container">
            <h3>Cada dia que passa amamo-nos mais.</h3>
            <p id="days-loving"><span id="days-count"></span> dias de amor e carinho</p>
        </section>
    </div>
</Layout>

<script>
    const startDate = new Date(2023, 10, 3);
    const today = new Date();
    const timeDifference = today.getTime() - startDate.getTime();
    const daysLoving = Math.floor(timeDifference / (1000 * 60 * 60 * 24));
    const daysCountElement = document.getElementById('days-count');
    if (daysCountElement) {
        daysCountElement.innerText = daysLoving.toString();
    }
</script>

<style>
    .time-together-container {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
    }

    .hero-section {
        background: linear-gradient(135deg, rgba(139, 0, 0, 0.05), rgba(255, 182, 193, 0.1));
        border-radius: 15px;
        padding: 4rem 2rem;
        text-align: center;
        margin-bottom: 3rem;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .hero-content {
        max-width: 800px;
        margin: 0 auto;
        background: rgba(255, 255, 255, 0.95);
        padding: 3rem;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(139, 0, 0, 0.1);
        border: 1px solid rgba(139, 0, 0, 0.1);
    }

    h1 {
        font-size: 3.2rem;
        color: var(--deep-red);
        margin-bottom: 1.5rem;
        font-family: 'Bodoni Moda', serif;
        font-weight: 700;
    }

    h2 {
        font-size: 2.6rem;
        color: var(--rich-crimson);
        margin-bottom: 1.5rem;
        font-family: 'Bodoni Moda', serif;
        font-weight: 600;
    }

    .hero-subtitle {
        font-size: 1.8rem;
        color: var(--elegant-burgundy);
        font-style: italic;
        margin-bottom: 2rem;
        font-family: 'Libre Baskerville', serif;
    }

    .days-loving-container {
        background: linear-gradient(135deg, #fff, rgba(255, 182, 193, 0.2));
        padding: 3rem;
        border-radius: 15px;
        text-align: center;
        box-shadow: 0 4px 20px rgba(139, 0, 0, 0.1);
        border: 1px solid rgba(139, 0, 0, 0.1);
    }

    .days-loving-container h3 {
        font-size: 2.2rem;
        color: var(--deep-red);
        margin-bottom: 1.5rem;
        font-family: 'Bodoni Moda', serif;
        font-weight: 600;
    }

    #days-loving {
        font-size: 1.8rem;
        color: var(--elegant-burgundy);
        font-family: 'Libre Baskerville', serif;
    }

    #days-count {
        font-size: 2.4rem;
        font-weight: bold;
        color: var(--rich-crimson);
    }

    @media (max-width: 768px) {
        .time-together-container {
            padding: 1rem;
        }

        .hero-section {
            padding: 2rem 1rem;
        }

        .hero-content {
            padding: 2rem;
        }

        h1 {
            font-size: 2.4rem;
        }

        h2 {
            font-size: 2rem;
        }

        .hero-subtitle {
            font-size: 1.4rem;
        }

        .days-loving-container {
            padding: 2rem;
        }

        .days-loving-container h3 {
            font-size: 1.8rem;
        }

        #days-loving {
            font-size: 1.4rem;
        }

        #days-count {
            font-size: 2rem;
        }
    }
</style>
