---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Tempo Juntos">
    <main class="time-together-container">
        <section class="hero-section">
            <div class="hero-content">
                <h1>Amando-nos um ao outro desde:</h1>
                <h2>3 de Novembro de 2023</h2>
                <p class="hero-subtitle">Uma jornada de amor e paix√£o</p>
            </div>
        </section>

        <section class="days-loving-container">
            <h3>Cada dia que passa amamo-nos mais.</h3>
            <p id="days-loving"><span id="days-count"></span> dias de amor e carinho</p>
        </section>
    </main>

    <script>
        const startDate = new Date(2023, 10, 3); // November 3, 2023
        const today = new Date();
        const timeDifference = today.getTime() - startDate.getTime();
        const daysLoving = Math.max(0, Math.floor(timeDifference / (1000 * 60 * 60 * 24))); // Ensure non-negative
        const daysCountElement = document.getElementById('days-count');
        if (daysCountElement) {
            daysCountElement.innerText = daysLoving.toString(); // or `${daysLoving}`
        } else {
            console.error('Element with ID "days-count" not found.');
        }
    </script>

    <style>
        .time-together-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 2rem;
            text-align: center;
        }

        .hero-section {
            position: relative;
            background: linear-gradient(
                135deg, 
                rgba(220, 20, 60, 0.1), 
                rgba(255, 182, 193, 0.05)
            );
            padding: 4rem 0;
            color: var(--elegant-burgundy);
            border-radius: 15px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
        }

        .hero-content {
            position: relative;
            z-index: 2;
        }

        .hero-subtitle {
            font-family: 'Libre Baskerville', serif;
            font-size: 1.7rem;
            color: var(--deep-red);
            font-style: italic;
        }

        button {
            margin-top: 1rem;
            padding: 10px 20px;
            background-color: var(--primary-color);
            color: var(--accent-color);
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        button:hover {
            background-color: var(--accent-color);
            color: var(--primary-color);
        }

        h1 {
            font-size: 2.8rem;
            color: var(--rich-crimson);
            margin: 0;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }

        h2 {
            font-size: 2.2rem;
            margin-top: 0.5rem;
        }

        .days-loving-container {
            margin-top: 2rem;
            padding: 1rem;
            background-color: #f9f9f9;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
        }

        .days-loving-container:hover {
            transform: scale(1.02);
        }

        h3 {
            color: var(--rich-crimson);
            font-size: 1.8rem;
        }

        p {
            font-size: 1.5rem;
            color: var(--dark-gray);
        }
    </style>
</Layout>
