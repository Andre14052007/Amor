---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Tempo Juntos">
    <main class="time-together-container">
        <section class="hero-section">
            <div class="hero-overlay"></div>
            <div class="hero-content">
                <h1>Amando um ao outro desde</h1>
                <h2>3 de Novembro de 2023</h2>
                <p class="hero-subtitle">Uma jornada de amor e companheirismo</p>
            </div>
        </section>

        <section class="days-loving-container">
            <h3>Quantos dias juntos:</h3>
            <p id="days-loving"><span id="days-count"></span> dias</p>
        </section>
    </main>

    <script>
        const startDate = new Date('2023-11-03');
        const today = new Date();
        const timeDifference = today - startDate;
        const daysLoving = Math.floor(timeDifference / (1000 * 60 * 60 * 24));
        document.getElementById('days-count').innerText = daysLoving;
    </script>

    <style>
        .time-together-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 2rem;
            text-align: center;
        }

        .hero-section {
            position: relative;
            background-image: url('/path/to/your/love-background.jpg'); /* Replace with your image */
            background-size: cover;
            background-position: center;
            padding: 4rem 0;
            color: white;
            border-radius: 15px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
        }

        .hero-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(0, 0, 0, 0.5);
            border-radius: 15px;
        }

        .hero-content {
            position: relative;
            z-index: 1;
            text-align: center;
        }

        h1 {
            font-size: 2.8rem;
            color: var(--rich-crimson);
            margin: 0;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }

        h2 {
            font-size: 2.2rem;
            margin-top: 0.5rem;
        }

        .hero-subtitle {
            font-size: 1.6rem;
            margin-top: 0.5rem;
            font-style: italic;
            color: #f0e68c;
        }

        .days-loving-container {
            margin-top: 2rem;
            padding: 1rem;
            background-color: #f9f9f9;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
        }

        .days-loving-container:hover {
            transform: scale(1.02);
        }

        h3 {
            color: var(--rich-crimson);
            font-size: 1.8rem;
        }

        p {
            font-size: 1.5rem;
            color: var(--dark-gray);
        }
    </style>
</Layout>
