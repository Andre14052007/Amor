---
import Layout from '../layouts/Layout.astro';

const images = [
    { src: '/Andre1.0.jpg', alt: 'Andre', caption: 'My Love' },
    { src: '/barbara1.0.jpeg', alt: 'Barbara', caption: 'My Everything' },
    { src: '/couple1.jpg', alt: 'Us Together', caption: 'Our First Date' },
    { src: '/couple2.jpg', alt: 'Romantic Moment', caption: 'Sunset Memories' },
    { src: '/couple3.jpg', alt: 'Adventure', caption: 'Exploring Together' }
];
---

<Layout title="Andre & Barbara: Our Gallery">
    <div class="gallery-container">
        <h1>Moments We Treasure</h1>
        <div class="gallery-grid">
            {images.map((image) => (
                <div class="gallery-item">
                    <img src={image.src} alt={image.alt} class="gallery-image"/>
                    <p class="image-caption">{image.caption}</p>
                </div>
            ))}
        </div>
    </div>
</Layout>

<style>
    .gallery-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 4rem 2rem;
        background-color: var(--color-background);
    }

    h1 {
        text-align: center;
        color: var(--color-primary);
        font-size: 3rem;
        margin-bottom: 3rem;
    }

    .gallery-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 2rem;
    }

    .gallery-item {
        background-color: rgba(255, 255, 255, 0.7);
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

    .gallery-item:hover {
        transform: scale(1.05);
    }

    .gallery-image {
        width: 100%;
        height: 300px;
        object-fit: cover;
    }

    .image-caption {
        text-align: center;
        padding: 1rem;
        color: var(--color-text);
        font-style: italic;
    }
</style>
