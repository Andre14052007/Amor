---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pt-BR">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Andre & Barbara: Uma História de Amor" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/heart-favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
		<link href="https://fonts.googleapis.com/css2?family=Bodoni+Moda:ital,wght@0,400;0,600;0,700;1,400&family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
	</head>
	<body>
		<header class="site-header">
			<a href="/" class="site-title">Andre <span class="heart">❤</span> Barbara</a>
			<nav class="site-nav">
				<a href="/" class="nav-link">Início</a>
				<a href="/about" class="nav-link">Sobre Nós</a>
				<a href="/gallery" class="nav-link">Galeria</a>
				<a href="/time%20together" class="nav-link">Tempo Juntos</a>
			</nav>
		</header>

		<div class="content-wrapper">
			<slot />
		</div>

		<footer class="site-footer">
			<p>Andre <span class="heart">❤</span> Barbara</p>
		</footer>
		<script is:inline src="/scripts/main.js"></script>
	</body>
</html>

<style>
	:root {
		--deep-red: #8B0000;
		--rich-crimson: #DC143C;
		--elegant-burgundy: #800020;
		--soft-rose: #FFB6C1;
	}

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html {
		font-family: 'Libre Baskerville', serif;
		background: #fff;
		color: var(--elegant-burgundy);
	}

	body {
		min-height: 100vh;
		display: flex;
		flex-direction: column;
	}

	.site-header {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		background: rgba(255, 245, 238, 0.95);
		box-shadow: 0 2px 10px rgba(128, 0, 32, 0.1);
		z-index: 1000;
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 1rem 6rem;
		backdrop-filter: blur(8px);
	}

	.site-nav {
		display: flex;
		gap: 2rem;
		align-items: center;
	}

	.site-title {
		font-family: 'Bodoni Moda', serif;
		font-size: 2.5rem;
		color: var(--deep-red);
		text-decoration: none;
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.heart {
		color: var(--rich-crimson);
		font-size: 2rem;
	}

	.nav-link {
		color: var(--deep-red);
		text-decoration: none;
		font-size: 1.1rem;
		font-family: 'Libre Baskerville', serif;
		padding: 0.5rem 1rem;
		border-radius: 4px;
		transition: all 0.3s ease;
	}

	.nav-link:hover {
		background-color: rgba(139, 0, 0, 0.1);
	}

	.content-wrapper {
		flex: 1;
		margin-top: 5rem;
		width: 100%;
		position: relative;
		z-index: 1;
	}

	.site-footer {
		text-align: center;
		padding: 2rem;
		background: rgba(255, 245, 238, 0.95);
		color: var(--deep-red);
		font-family: 'Bodoni Moda', serif;
		font-size: 1.2rem;
	}

	@media (max-width: 768px) {
		.site-header {
			padding: 1rem 2rem;
			flex-direction: column;
			gap: 1rem;
		}

		.site-nav {
			flex-direction: row;
			flex-wrap: wrap;
			justify-content: center;
			gap: 1rem;
			width: 100%;
		}

		.site-title {
			font-size: 2rem;
		}

		.content-wrapper {
			margin-top: 8rem;
		}
	}
</style>