---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pt-BR">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Andre & Barbara: Uma História de Amor" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/heart-favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
		<link href="https://fonts.googleapis.com/css2?family=Bodoni+Moda:ital,wght@0,400;0,600;0,700;1,400&family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
		<link rel="stylesheet" href="/styles/global.css">
	</head>
	<body>
		<header class="site-header">
			<nav class="main-navigation">
				<div class="logo-container">
					<a href="/" class="logo">
						<span class="logo-text">A&B</span>
						<svg class="heart-icon" viewBox="0 0 24 24" fill="currentColor">
							<path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
						</svg>
					</a>
				</div>
				<ul class="nav-links">
					<li><a href="/" class="button">Início</a></li>
					<li><a href="/about" class="button">Sobre Nós</a></li>
					<li><a href="/gallery" class="button">Galeria</a></li>
					<li><a href="/testimonials" class="button">Depoimentos</a></li>
				</ul>
			</nav>
		</header>

		<main>
			<slot />
		</main>

		<footer class="site-footer">
			<div class="footer-content">
				<div class="footer-love">
					<p>Andre & Barbara {new Date().getFullYear()}</p>
					<p>Uma história de amor além das fronteiras</p>
				</div>
				<div class="footer-links">
					<a href="#" class="social-link">Instagram</a>
					<a href="#" class="social-link">Email</a>
				</div>
			</div>
		</footer>
	</body>
</html>

<style>
	:root {
		--deep-red: #8B0000;
		--rich-crimson: #DC143C;
		--elegant-burgundy: #800020;
		--soft-rose: #FFB6C1;
		--romantic-cream: #FFF5EE;
		--text-color: #2C0E0E;
		--accent-gold: #DAA520;
	}

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html {
		font-family: 'Libre Baskerville', serif;
		background-color: var(--romantic-cream);
		color: var(--text-color);
		line-height: 1.6;
	}

	.site-header {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		background-color: rgba(255, 245, 238, 0.95);
		box-shadow: 0 2px 10px rgba(128, 0, 32, 0.05);
		z-index: 1000;
	}

	.main-navigation {
		display: flex;
		justify-content: space-between;
		align-items: center;
		max-width: 1200px;
		margin: 0 auto;
		padding: 1rem 2rem;
	}

	.logo-container {
		display: flex;
		align-items: center;
	}

	.logo {
		display: flex;
		align-items: center;
		text-decoration: none;
		color: var(--deep-red);
		transition: transform 0.3s ease;
	}

	.logo:hover {
		transform: scale(1.05);
	}

	.logo-text {
		font-family: 'Bodoni Moda', serif;
		font-size: 2rem;
		font-weight: 700;
		margin-right: 0.5rem;
	}

	.heart-icon {
		width: 30px;
		height: 30px;
		color: var(--rich-crimson);
	}

	.nav-links {
		display: flex;
		list-style: none;
		gap: 2rem;
	}

	.button {
		background-color: var(--elegant-burgundy);
		color: var(--romantic-cream);
		border: none;
		padding: 0.5rem 1rem;
		border-radius: 0.5rem;
		cursor: pointer;
		transition: background-color 0.3s ease;
	}

	.button:hover {
		background-color: var(--rich-crimson);
	}

	main {
		max-width: 1200px;
		margin: 0 auto;
		padding: 6rem 2rem 2rem;
	}

	.site-footer {
		background-color: var(--deep-red);
		color: var(--romantic-cream);
		padding: 2rem;
		margin-top: 4rem;
	}

	.footer-content {
		max-width: 1200px;
		margin: 0 auto;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.footer-love {
		text-align: left;
	}

	.footer-love p {
		font-family: 'Bodoni Moda', serif;
		margin-bottom: 0.5rem;
	}

	.footer-links {
		display: flex;
		gap: 1.5rem;
	}

	.social-link {
		color: var(--soft-rose);
		text-decoration: none;
		font-family: 'Libre Baskerville', serif;
		transition: color 0.3s ease;
	}

	.social-link:hover {
		color: var(--romantic-cream);
	}

	@media (max-width: 768px) {
		.main-navigation {
			flex-direction: column;
			padding: 1rem;
		}

		.nav-links {
			margin-top: 1rem;
			flex-direction: column;
			align-items: center;
			gap: 1rem;
		}

		.footer-content {
			flex-direction: column;
			text-align: center;
			gap: 1rem;
		}
	}
</style>