---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pt-BR">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Andre & Barbara: Uma História de Amor" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/heart-favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
		<link href="https://fonts.googleapis.com/css2?family=Bodoni+Moda:ital,wght@0,400;0,600;0,700;1,400&family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
	</head>
	<body>
		<header class="site-header">
			<a href="/" class="site-title">Andre <span class="heart">❤</span> Barbara</a>
			<nav class="site-nav">
				<a href="/" class="nav-link">Início</a>
				<a href="/about" class="nav-link">Sobre Nós</a>
				<a href="/gallery" class="nav-link">Galeria</a>
				<a href="/time%20together" class="nav-link">Tempo Juntos</a>
			</nav>
		</header>

		<div class="content-wrapper">
			<slot />
		</div>

		<footer class="site-footer">
			<p>Andre <span class="heart">❤</span> Barbara</p>
		</footer>
		<script is:inline src="/scripts/main.js"></script>
	</body>
</html>

<style>
	:root {
		--deep-red: #8B0000;
		--rich-crimson: #DC143C;
		--elegant-burgundy: #800020;
		--soft-rose: #FFB6C1;
		--love-pink: #FFE4E1;
		--romantic-pink: #FFC0CB;
	}

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html {
		font-family: 'Libre Baskerville', serif;
		background: #fff;
		color: var(--elegant-burgundy);
	}

	body {
		min-height: 100vh;
		display: flex;
		flex-direction: column;
	}

	.site-header {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		background: linear-gradient(135deg, var(--love-pink), var(--romantic-pink));
		box-shadow: 0 4px 20px rgba(255, 182, 193, 0.4);
		z-index: 1000;
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 1.2rem 3rem;
		backdrop-filter: blur(10px);
		border-bottom: 1px solid rgba(255, 255, 255, 0.3);
	}

	.site-title {
		font-family: 'Bodoni Moda', serif;
		font-size: 1.8rem;
		font-weight: 700;
		color: var(--elegant-burgundy);
		text-decoration: none;
		display: flex;
		align-items: center;
		gap: 0.5rem;
		transition: transform 0.3s ease;
	}

	.site-title:hover {
		transform: scale(1.05);
	}

	.site-title .heart {
		color: var(--rich-crimson);
		animation: heartbeat 1.5s ease-in-out infinite;
		display: inline-block;
	}

	@keyframes heartbeat {
		0% { transform: scale(1); }
		50% { transform: scale(1.1); }
		100% { transform: scale(1); }
	}

	.site-nav {
		display: flex;
		gap: 2rem;
		align-items: center;
		background: rgba(255, 255, 255, 0.2);
		padding: 0.8rem 1.5rem;
		border-radius: 30px;
		backdrop-filter: blur(5px);
	}

	.nav-link {
		color: var(--elegant-burgundy);
		text-decoration: none;
		font-weight: 500;
		font-size: 1.1rem;
		transition: all 0.3s ease;
		padding: 0.5rem 1rem;
		border-radius: 20px;
		position: relative;
	}

	.nav-link:hover {
		color: var(--rich-crimson);
		background: rgba(255, 255, 255, 0.4);
		transform: translateY(-2px);
	}

	.nav-link::after {
		content: '';
		position: absolute;
		bottom: 0;
		left: 50%;
		width: 0;
		height: 2px;
		background: var(--rich-crimson);
		transition: all 0.3s ease;
		transform: translateX(-50%);
	}

	.nav-link:hover::after {
		width: 70%;
	}

	.content-wrapper {
		flex: 1;
		margin-top: 5rem;
		width: 100%;
		position: relative;
		z-index: 1;
	}

	.site-footer {
		background: linear-gradient(135deg, var(--love-pink), var(--romantic-pink));
		color: var(--elegant-burgundy);
		text-align: center;
		padding: 1.5rem;
		margin-top: auto;
		box-shadow: 0 -2px 10px rgba(255, 182, 193, 0.3);
	}

	.site-footer p {
		font-family: 'Bodoni Moda', serif;
		font-size: 1.2rem;
	}

	@media (max-width: 768px) {
		.site-header {
			padding: 1rem;
			flex-direction: column;
			gap: 1rem;
		}

		.site-nav {
			padding: 0.5rem;
			gap: 0.5rem;
			flex-wrap: wrap;
			justify-content: center;
			width: 100%;
		}

		.nav-link {
			font-size: 0.9rem;
			padding: 0.4rem 0.8rem;
		}

		.site-title {
			font-size: 1.5rem;
		}
	}
</style>