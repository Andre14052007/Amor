---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pt-BR">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Andre & Barbara: Uma História de Amor" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/heart-favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
		<link href="https://fonts.googleapis.com/css2?family=Bodoni+Moda:ital,wght@0,400;0,600;0,700;1,400&family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
		<link rel="stylesheet" href="/styles/global.css">
		<link rel="stylesheet" href="/styles/site.css">
		<link rel="stylesheet" href="/styles/enhanced.css">
	</head>
	<body>
		<header class="site-header">
					<a href="/" class="site-title">Andre <span class="heart">❤</span> Barbara</a>
					<a href="/" class="nav-link">Início</a>
					<a href="/about" class="nav-link">Sobre Nós</a>
					<a href="/gallery" class="nav-link">Galeria</a>
					<a href="/time&together" class="nav-link">Tempo Juntos</a>
				</nav>
			</div>
		</header>

		<main>
			<slot />
		</main>

		<footer class="site-footer">
			<p> Andre <span class="heart">❤</span> Barbara</p>
			
				
			</div>
		</footer>
		<script is:inline src="/scripts/main.js"></script>
	</body>
</html>

<style>
	:root {
		--deep-red: #8B0000;
		--rich-crimson: #DC143C;
		--elegant-burgundy: #800020;
		--soft-rose: #FFB6C1;
		--romantic-cream: #FFF5EE;
		--text-color: #2C0E0E;
		--accent-gold: #DAA520;
		--primary-color: #8B0A1A;
		--accent-color: #FFF5EE;
	}

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html {
		font-family: 'Libre Baskerville', serif;
		background-color: var(--romantic-cream);
		color: var(--text-color);
		line-height: 1.6;
	}

	.site-header {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		background-color: rgba(255, 245, 238, 0.95);
		box-shadow: 0 2px 10px rgba(128, 0, 32, 0.05);
		z-index: 1000;
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 1rem 2rem;
	}

	.site-title {
		font-family: 'Bodoni Moda', serif;
		font-size: 2rem;
		font-weight: 700;
		color: var(--deep-red);
	}

	.site-nav {
		margin-left: 2rem;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.site-nav a {
		color: var(--text-color);
		text-decoration: none;
		transition: color 0.3s ease;
		margin-right: 2rem;
	}

	.site-nav a:hover {
		color: var(--rich-crimson);
	}

	.logo {
		margin: 0 2rem;
	}

	.logo h1 {
		font-family: 'Bodoni Moda', serif;
		font-size: 2rem;
		font-weight: 700;
		color: var(--deep-red);
	}

	main {
		max-width: 1200px;
		margin: 0 auto;
		padding: 6rem 2rem 2rem;
	}

	.site-footer {
		background-color: var(--deep-red);
		color: var(--romantic-cream);
		padding: 2rem;
		margin-top: 4rem;
		text-align: center;
	}

	.social-media {
		margin-top: 1rem;
	}

	.social-media a {
		color: var(--soft-rose);
		text-decoration: none;
		font-family: 'Libre Baskerville', serif;
		transition: color 0.3s ease;
		margin: 0 1rem;
	}

	.social-media a:hover {
		color: var(--romantic-cream);
	}

	@media (max-width: 768px) {
		.site-header {
			flex-direction: column;
			padding: 1rem;
		}

		.site-nav {
			flex-direction: column;
			align-items: center;
		}

		.site-nav a {
			margin: 1rem 0;
		}

		.logo {
			margin: 1rem 0;
		}
	}
</style>